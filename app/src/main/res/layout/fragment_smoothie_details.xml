<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="com.example.hp.coffeeh.prodDetails.SmoothieDetailsFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_smoothie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_smoothie"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:fitsSystemWindows="true"
                app:contentScrim="#616161"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_smoothie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fl_smoothie_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_local_grocery_store_black_24dp"
            app:elevation="6dp"
            app:layout_anchor="@id/app_bar_smoothie"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="12dp"
            app:useCompatPadding="true" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/smoothie_detail_nestedScrolView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_smoothie_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="12dp"
                            android:text="Mac Coffee"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layout_ice_cf_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_smoothie_detail_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:padding="12dp"
                                android:text="200 AMD"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/smoothie_detail_elButton"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            app:backGroundColor="#e45b5553"
                            app:finalNumber="100"
                            app:initialNumber="0">

                        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Sugar"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />



                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#e45b5553">

                                    <EditText

                                        android:id="@+id/smoothie_sugar"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Please enter how many spoons of sugar you want"
                                        android:textColorHint="@android:color/black" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Order in"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <RadioGroup
                                    android:id="@+id/smoothie_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#e45b5553"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/smoothie_5min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5 min" />

                                    <RadioButton
                                        android:id="@+id/smoothie_10min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10 min" />

                                    <RadioButton
                                        android:id="@+id/smoothie_15min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15 min" />

                                    <RadioButton
                                        android:id="@+id/smoothie_20min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20 min" />

                                    <RadioButton
                                        android:id="@+id/smoothie_25min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25 min" />

                                    <RadioButton
                                        android:id="@+id/smoothie_30min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="30 min" />

                                </RadioGroup>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
