<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zv_nebo"
    android:orientation="vertical"
    tools:context="com.example.hp.coffeeh.activitys.DontHaveAcountActivity">




        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_textColorHint="@android:color/darker_gray"
            android:id="@+id/et_name"
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="18sp"/>




        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_textColorHint="@android:color/darker_gray"
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            android:id="@+id/et_sname"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sname"
            android:textSize="18sp"/>




        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            app:met_textColorHint="@android:color/darker_gray"
            android:id="@+id/et_age"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textSize="18sp"
            android:inputType="number"
            android:maxLength="3"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="30"
            app:met_textColorHint="@android:color/darker_gray"
            android:id="@+id/et_email1"
            android:layout_marginTop="10sp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"/>



        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            app:met_textColorHint="@android:color/darker_gray"
            android:id="@+id/et_password"
            android:layout_marginTop="10sp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password min 6 symbol"
            android:textSize="18sp"/>
    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/sticky_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:ss_animationDuration="600"
        app:ss_iconPadding="15dp"
        app:ss_iconSize="25dp"
        app:ss_leftIcon="@drawable/ic_male"
        app:ss_leftText="Male"
        app:ss_rightIcon="@drawable/ic_female"
        app:ss_rightText="Female"
        app:ss_selectedTextSize="14sp"
        app:ss_sliderBackgroundColor="#151414"
        app:ss_switchColor="#0072f5"
        app:ss_textColor="@android:color/white"
        app:ss_textSize="12sp"
        app:ss_animationType="line"/>

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Spinner
            android:textColor="@android:color/white"
            android:id="@+id/spinner_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

        </Spinner>

        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_textColorHint="@android:color/darker_gray"
            app:met_baseColor="@android:color/white"
            android:id="@+id/et_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:ems="10"
            android:inputType="phone"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <info.hoang8f.widget.FButton
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:id="@+id/btn_singin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sing in"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"/>
        <info.hoang8f.widget.FButton
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:id="@+id/btn_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"/>


    </LinearLayout>
</LinearLayout>

